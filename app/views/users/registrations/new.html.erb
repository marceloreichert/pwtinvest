<div class='standalone' id='standalone'>

	<div class='title_tools'> <%= t("sign_up.user_help") %> </div>
	<div class='title'> <%= t("sign_up.user") %> </div>

	<div class='section'>
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			<%= f.input :email, :label => 'E-mail:   ' %>
			<%= f.input :password, :label => 'Senha: ' %>
			<%= f.input :password_confirmation, :label => 'Confirmação de Senha: ' %>

		  <% if devise_mapping.rememberable? -%>
		    <p><%= f.check_box :remember_me %> <%= f.label t('comum.remember_me') %></p>
		  <% end -%>

	  	<p><%= f.submit t("sign_up.user") %></p>
	
			<%= render "users/shared/links" %>
	  <% end %>
	</div>
</div>
<% content_for :sidebar, render(:partial => 'home/sidebar') -%>