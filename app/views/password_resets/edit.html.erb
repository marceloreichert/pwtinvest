<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Alteração da Senha', root_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Alteração da Senha</h2>
    <div class="inner">
	
	<% form_for @user, :url => password_reset_path, :method => :put do |f| %>
		<p>
			Senha<br>
			<%= f.password_field :password %>
		</p>
		<p>
			Confirmação de senha<br>
			<%= f.password_field :password_confirmation %>
		</p>
		<p>
			<%= f.submit "Alterar senha", :id => "botao" %>
		</p>
	<% end %>
	
	  <div class="actions-bar">
      <div class="actions">
      </div>

        <div class="clear"></div>

	</div>
</div>
</div>
</div>

<% content_for :sidebar, render(:partial => 'home/sidebar') -%>
