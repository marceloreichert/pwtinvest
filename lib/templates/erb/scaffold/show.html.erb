<div class='title_tools'>
  <%%= link_to(t('<%= singular_name %>.index'), <%= plural_name %>_path) %>
  <%%= ' | ' %>
	<%%= link_to(t('<%= singular_name %>.new'), new_<%= singular_name %>_path)%>
</div>

<div class='title'> <%%= t('<%= singular_name %>.show') %> </div>

<div class='section'>
  <table width="500" cellpadding="0" cellspacing="0">
	  <%- attributes.each do |attribute| -%>
			<tr>
	      <td valign="top">
	        <div class='label top req'> <%%=t("<%= attribute.name %>") %>: </div>
	      </td>
				<td>
					<%%= @<%= singular_name %>.<%= attribute.name %> %>
				</td>
			</tr>
	  <%- end -%>
	</table>
</div>

